<?xml version="1.0"?>
<window id="0">
  <defaultcontrol always="true">5043</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <controls>
    <control type="button" id="5043">
      <include>HiddenObject</include>
      <visible>!Skin.HasSetting(homelatest) + Skin.HasSetting(TotalsOff)</visible>
      <onfocus>Control.SetFocus(5044)</onfocus>
    </control>
    <control type="button" id="5043">
      <include>HiddenObject</include>
      <visible>Skin.HasSetting(homelatest) | !Skin.HasSetting(TotalsOff)</visible>      
      <onfocus>RunScript(script.recentlyadded,limit=8&amp;albums=True&amp;unplayed=True&amp;totals=True)</onfocus>
      <onfocus>Control.SetFocus(5044)</onfocus>
    </control>
    <control type="button" id="5044">
      <include>HiddenObject</include>    
      <visible>!Skin.HasSetting(random_items)</visible>            
      <onfocus>Control.SetFocus(300)</onfocus>
    </control>
    <control type="button" id="5044">
      <include>HiddenObject</include>
      <visible>Skin.HasSetting(random_items)</visible>
      <onfocus>RunScript(script.randomitems,limit=8&amp;unplayed=True&amp;random=True)</onfocus>
      <onfocus>Control.SetFocus(300)</onfocus>
    </control>
    <control type="label">
      <description>Force Weather update on load</description>
      <include>HiddenObject</include> 
      <label>$INFO[Weather.Conditions]</label>
      <font>-</font>
      <onfocus>Skin.SetBool(Startup2)</onfocus>
      <visible>Skin.HasSetting(Startup2)</visible>
    </control>
    <control type="image" id="87">
      <include>HiddenObject</include>
      <visible>Container(300).OnNext | Container(300).OnPrevious</visible>
      <animation effect="fade" time="200">Hidden</animation>
    </control>
    <control type="multiimage">
      <include>BackgroundVarsGlobal</include>
      <imagepath background="true">$INFO[Container(300).ListItem.Icon]</imagepath>
      <visible>![Skin.HasSetting(libraryfanart_music) + Container(300).HasFocus(1)]</visible>
    </control>
    <control type="multiimage">
      <include>BackgroundVarsGlobal</include>
      <imagepath background="true">special://Thumbnails/Music/Fanart/</imagepath>
      <visible>[Skin.HasSetting(libraryfanart_music) + Container(300).HasFocus(1)]</visible>
    </control>
    <control type="largeimage">
      <include>BackgroundVarsGlobal</include>
      <texture background="true">$INFO[Container(510).ListItem.ActualIcon]</texture>
      <visible>Control.HasFocus(510) + [Container(300).HasFocus(6) | Container(300).HasFocus(1)]</visible>
    </control>
    <control type="largeimage">
      <include>BackgroundVarsGlobal</include>
      <texture background="true">$INFO[Container(511).ListItem.ActualIcon]</texture>
      <visible>Control.HasFocus(511) + [Container(300).HasFocus(6) | Container(300).HasFocus(1)]</visible>
    </control>
    <control type="image">
      <!--Audio unten-->
      <visible>[Player.HasAudio | [Player.HasVideo + Skin.HasSetting(homevideowindow)]] + !Skin.HasSetting(lowermainmenu) +[[Skin.HasSetting(lowerwidgets) + ![Control.HasFocus(510) | Control.HasFocus(511)]] | [!Skin.HasSetting(lowerwidgets) + [[Control.HasFocus(510) | Control.HasFocus(511)] | Container(300).HasFocus(10)]]]</visible>
      <posx>0</posx>
      <posy>360</posy>
      <width>1280</width>
      <height>390</height>
      <texture>home/nowplaying_shadow.png</texture>
      <animation effect="slide" start="0,390" end="0,0" time="300">Visible</animation>
      <animation effect="slide" start="0,0" end="0,390" time="500">Hidden</animation>
      <include>Animation_OpenCloseBackgroundShade</include>
    </control>
    <control type="image">
      <!--Audio unten lowermainmenu-->
      <visible>[Player.HasAudio | [Player.HasVideo + Skin.HasSetting(homevideowindow)]] + Skin.HasSetting(lowermainmenu) + ![Control.HasFocus(510) | Control.HasFocus(511)]</visible>
      <posx>0</posx>
      <posy>180</posy>
      <width>1280</width>
      <height>390</height>
      <texture>home/nowplaying_shadow.png</texture>
      <include>Animation_VisibleChange400</include>
      <include>Animation_OpenCloseBackgroundShade</include>
    </control>
    <control type="image">
      <!--Audio oben-->
      <visible>[Player.HasAudio | [Player.HasVideo + Skin.HasSetting(homevideowindow)]] + !Container(300).HasFocus(10) + [[!Skin.HasSetting(lowermainmenu) +[[Skin.HasSetting(lowerwidgets) + [Control.HasFocus(510) | Control.HasFocus(511)]] | [!Skin.HasSetting(lowerwidgets) + ![Control.HasFocus(510) | Control.HasFocus(511)]]]] | [Skin.HasSetting(lowermainmenu) + [Control.HasFocus(510) | Control.HasFocus(511)]]]</visible>
      <posx>0</posx>
      <posy>-4</posy>
      <width>1280</width>
      <height>410</height>
      <texture flipy="true">home/nowplaying_shadow.png</texture>
      <animation effect="slide" start="0,-390" end="0,0" time="300">Visible</animation>
      <animation effect="slide" start="0,0" end="0,-390" time="500">Hidden</animation>
      <include>Animation_OpenCloseBackgroundShade</include>
    </control>
    <control type="image">
      <!--RecentlyAdded oben-->
      <visible>!Skin.HasSetting(lowermainmenu) + !Skin.HasSetting(lowerwidgets) + [Control.HasFocus(510) | Control.HasFocus(511)]</visible>
      <posx>0</posx>
      <posy>-4</posy>
      <width>1280</width>
      <height>410</height>
      <texture flipy="true">home/nowplaying_shadow.png</texture>
      <animation effect="slide" start="0,-390" end="0,0" time="300">Visible</animation>
      <animation effect="slide" start="0,0" end="0,-390" time="500">Hidden</animation>
      <include>Animation_OpenCloseBackgroundShade</include>
    </control>
    <control type="image">
      <!--RecentlyAdded unten-->
      <visible>!Skin.HasSetting(lowermainmenu) + Skin.HasSetting(lowerwidgets) + [Control.HasFocus(510) | Control.HasFocus(511)]</visible>
      <posx>0</posx>
      <posy>360</posy>
      <width>1280</width>
      <height>390</height>
      <texture>home/nowplaying_shadow.png</texture>
      <animation effect="slide" start="0,390" end="0,0" time="300">Visible</animation>
      <animation effect="slide" start="0,0" end="0,390" time="500">Hidden</animation>
      <include>Animation_OpenCloseBackgroundShade</include>
    </control>
    <control type="image">
      <!--RecentlyAdded unten lowermainmenu-->
      <visible>Skin.HasSetting(lowermainmenu) + [Control.HasFocus(510) | Control.HasFocus(511)]</visible>
      <posx>0</posx>
      <posy>180</posy>
      <width>1280</width>
      <height>390</height>
      <texture>home/nowplaying_shadow.png</texture>
      <include>Animation_VisibleChange400</include>
      <include>Animation_OpenCloseBackgroundShade</include>
    </control>
    <include condition="!StringCompare(Weather.Plugin,weather.com plus)">Objects_WeatherPopup</include>
    <include condition="StringCompare(Weather.Plugin,weather.com plus)">Widget_Weather</include>
    <include>Furniture_HomeNowPlaying</include>
    <include condition="Skin.HasSetting(homelatest) | Skin.HasSetting(random_items)">latest_added</include>
    <include condition="!Skin.HasSetting(hometimeoff)">HomeTime</include>
    <include condition="!Skin.HasSetting(TotalsOff) + !Skin.HasSetting(highertotals)">Furniture_LibraryLow</include>
    <include condition="!Skin.HasSetting(TotalsOff) + Skin.HasSetting(highertotals)">Furniture_LibraryHigh</include>
    <include condition="!Skin.HasSetting(homerssoff)">HomeRSS</include>
    <include>Submenu</include>
    <control type="group">
      <posx>0</posx>
      <posy>0</posy>
      <width>1280</width>
      <height>720</height>
      <animation effect="slide" start="0,0" end="0,225" time="400" tween="cubic" easing="inout" condition="Skin.HasSetting(lowermainmenu)">Conditional</animation>
      <include>Animation_OpenCloseZoom</include>
      <include>Animation_CommonFade2</include>
      <control type="image">
        <posx>0</posx>
        <posy>302</posy>
        <width>1280</width>
        <height>150</height>
        <texture>home/homemenu_back.png</texture>
        <include>Animation_CommonFade2</include>
      </control>
      <control type="group">
        <posx>0</posx>
        <posy>343</posy>
        <width>1280</width>
        <height>61</height>
        <defaultcontrol>300</defaultcontrol>
        <include>MainMenu</include>
        <include>Animation_CommonFade2</include>
      </control>
      <control type="image">
        <posx>0</posx>
        <posy>302</posy>
        <width>1280</width>
        <height>150</height>
        <texture>home/homemenu_gradient.png</texture>
        <include>Animation_CommonFade2</include>
        <visible>!Skin.HasSetting(nohomegradient)</visible>
        <colordiffuse>whiteD0</colordiffuse>
      </control>
      <control type="image">
        <posx>-400</posx>
        <posy>329</posy>
        <width>1780</width>
        <height>27</height>
        <texture>common/topbar.png</texture>
        <visible>Skin.HasSetting(gloweffect_home)</visible>
        <include>Animation_CommonFade</include>
        <animation effect="slide" start="0,0" end="400,0" time="2000" pulse="true" tween="cubic" easing="inout" condition="true">Conditional</animation>
      </control>
      <control type="image">
        <posx>-400</posx>
        <posy>393</posy>
        <width>1780</width>
        <height>27</height>
        <texture>common/topbar.png</texture>
        <visible>Skin.HasSetting(gloweffect_home)</visible>
        <include>Animation_CommonFade</include>
        <animation effect="slide" start="0,0" end="400,0" time="2000" pulse="true" tween="cubic" easing="inout" condition="true">Conditional</animation>
      </control>
    </control>
    <include>BackgroundEffect</include>   
    <include>Background_ContextBlack</include>

    <include condition="Skin.HasSetting(DebugGrid)">Furniture_DebugGrid</include>
  </controls>
</window>
